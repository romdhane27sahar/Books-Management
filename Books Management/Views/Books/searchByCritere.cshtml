@model IEnumerable<Books_Management.Models.Book>

@{
    ViewData["Title"] = "searchByCritere";
}

<h1>Search By A Chosen Critere</h1>



@using (Html.BeginForm())
{
        <select name="critere">
            <option value="Title">Titre</option>
            <option value="Genre">Genre</option>
        </select>
        <input type="text" name="value" placeholder="Entrer la valeur à chercher " />
        <input type="submit" value="search" />

}



<style>
    .link-container {
        display: flex;
        justify-content: space-between;
    }
</style>
  
<div class="link-container">
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <p>
        <a asp-action="searchBooks">Back To Search Books</a>
    </p>
</div>

 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdB">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdB">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdB">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
